<Window
    x:Class="TableBooking.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TableBooking"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:WpfUI.ViewModels"
    xmlns:views="clr-namespace:WpfUI.Views"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Menu Grid.Row="0">
            <MenuItem
                Command="{Binding ChangeViewCommand}"
                CommandParameter="Login"
                Header="Login" />
            <MenuItem
                Command="{Binding ChangeViewCommand}"
                CommandParameter="Register"
                Header="Register" />
            <MenuItem
                Command="{Binding ChangeViewCommand}"
                CommandParameter="Users"
                Header="Users" />
            <MenuItem
                Command="{Binding ChangeViewCommand}"
                CommandParameter="Restaurants"
                Header="Restaurants" />
        </Menu>

        <ContentControl Grid.Row="1" Content="{Binding SelectedView}" />
    </Grid>
</Window>