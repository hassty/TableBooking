<UserControl
    x:Class="WpfUI.Views.RegisterView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WpfUI.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <Label>Username</Label>
        <TextBox
            x:Name="Username"
            Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
            TextChanged="Content_TextChanged" />
        <Label>Password</Label>
        <PasswordBox x:Name="PasswordBox" PasswordChanged="Content_TextChanged" />
        <Label>Confirm password</Label>
        <PasswordBox x:Name="ConfirmPasswordBox" PasswordChanged="Content_TextChanged" />
        <Button
            x:Name="Register"
            Command="{Binding RegisterCommand}"
            CommandParameter="{Binding ElementName=PasswordBox}"
            Content="Register"
            IsDefault="True"
            IsEnabled="False" />
    </StackPanel>
</UserControl>